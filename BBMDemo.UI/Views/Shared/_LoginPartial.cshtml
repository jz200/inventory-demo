@using Microsoft.AspNetCore.Identity
@using BBMDemo.UI.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Lockout" method="post" id="logoutForm">
        <ul class="nav navbar-nav navbar-right">
            <li id="emailLine">@User.Identity.Name</li>
            <li class="dropdown pull-right">
                <a href="#" id="user-dropdown" class="dropdown-toggle user-dropdown"
                   data-toggle="dropdown" role="button" aria-expanded="false">
                    <img src="~/images/avatar.png" class="img-circle avatar"
                         alt="" height="40" />
                    <span class="caret text-light hidden-xs"></span>
                </a>
                <ul class="dropdown-menu" role="menu">
                    <li>
                        <a onclick="document.getElementById('logoutForm').submit()">Log Out</a>
                    </li>
                </ul>
            </li>

        </ul>
    </form>
}

